<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/graylinear">



<ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/arrow"
    android:scaleType="centerCrop"
    android:layout_marginTop="23dp"
    android:background="@drawable/button_circil"
    android:layout_marginLeft="20dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить комнату"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="619dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="386dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextstroke"
                android:hint="Название комнаты" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выберите комнату"
                android:textColor="@color/graytextview"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/living_gray"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:text="Гостинная" />

            </LinearLayout>



    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/kitchen_gray1"
        android:scaleType="centerCrop"
        android:layout_marginEnd="20dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@drawable/bathroom_gray1"
        android:scaleType="centerCrop" />





            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/office_gray1"
                android:scaleType="centerCrop" />


            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/bed_gray1"
                android:scaleType="centerCrop" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/tv_gray1"
                android:scaleType="centerCrop" />


        </GridLayout>


        <com.google.android.material.button.MaterialButton
            app:cornerRadius="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="Сохранить"
            android:textSize="18dp"
            android:backgroundTint="@color/bluesave"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>



    </LinearLayout>

</LinearLayout>