<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".add_adress_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/graylinear">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить адрес"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="619dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="@string/text"
                android:layout_marginLeft="15dp"></TextView>

            <EditText
                android:layout_width="389dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/editinfo"
                android:background="@drawable/edittextstroke"
                android:hint="введите данные свои "></EditText>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="Сохранить"
            android:id="@+id/btnSave"
            android:textSize="18dp"
            android:backgroundTint="@color/bluesave"
            android:layout_marginTop="200dp"/>



    </LinearLayout>

</LinearLayout>