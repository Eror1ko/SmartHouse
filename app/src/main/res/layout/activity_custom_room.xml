<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom_room">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/linearblue">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bed_gray1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:id="@+id/imagecustom"/>

        <TextView
            android:layout_width="223dp"
            android:layout_height="70dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="Гостинная"
            android:textColor="@color/linearblue"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textcustom"/>

    </LinearLayout>


</LinearLayout>